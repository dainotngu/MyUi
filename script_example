-- Load UI
local UI = loadstring(game:HttpGet("https://raw.githubusercontent.com/dainotngu/MyUi/refs/heads/main/UI_Dai.lua"))()

-- Init UI
UI:Init({
    Theme = "Neon",
    Acrylic = true,
    BlurIntensity = 8
})

-- Tạo cửa sổ chính
local Window = UI:CreateWindow({
    Title = "DAI UI VIP FULL",
    SubTitle = "FX Engine + Themes",
    Size = UDim2.fromOffset(780, 540),
    TabWidth = 160
})

-- ===== Tab Main =====
local MainTab = Window:AddTab({Title = "Main"})

MainTab:AddButton({
    Title = "Run Script",
    Description = "Chạy demo script",
    Callback = function()
        print("Run clicked")
        UI:Notify("Thông báo", "Bạn vừa click Run!", 3)
    end
})

MainTab:AddSlider({
    Title = "Speed Demo",
    Description = "Điều chỉnh tốc độ demo",
    Min = 1,
    Max = 100,
    Default = 50,
    Callback = function(value)
        print("Speed Demo:", value)
        UI:Notify("Speed Demo", "Giá trị: "..value, 2)
    end
})

MainTab:AddDropdown({
    Title = "Select Mode",
    Description = "Chọn chế độ demo",
    Options = {"Mode 1","Mode 2","Mode 3"},
    Default = "Mode 1",
    Callback = function(selected)
        print("Mode:", selected)
        UI:Notify("Mode Selected", "Bạn chọn: "..selected, 2.5)
    end
})

MainTab:AddToggle({
    Title = "Demo FX Toggle",
    Description = "Bật/Tắt FX demo",
    Default = false,
    Callback = function(state)
        print("Demo FX:", state)
        UI:Notify("Demo FX", state and "Đã bật" or "Đã tắt", 2)
    end
})

-- ===== Tab Settings =====
local SettingsTab = Window:AddTab({Title = "Settings"})

SettingsTab:AddButton({
    Title = "Change Theme",
    Description = "Đổi theme sang Ocean",
    Callback = function()
        UI:Notify("Theme", "Chuyển sang Ocean", 2)
        Window:SetTheme("Ocean")
    end
})

SettingsTab:AddToggle({
    Title = "Enable Notifications",
    Description = "Bật/Tắt thông báo UI",
    Default = true,
    Callback = function(state)
        UI:Notify("Notifications", state and "Bật" or "Tắt", 2)
    end
})

SettingsTab:AddSlider({
    Title = "Blur Intensity",
    Description = "Điều chỉnh độ mờ nền",
    Min = 0,
    Max = 20,
    Default = 8,
    Callback = function(value)
        if game.Lighting:FindFirstChild("DAI_UI_v100_BLUR") then
            game.Lighting.DAI_UI_v100_BLUR.Size = value
        end
    end
})

-- ===== Tab FX =====
local FXTab = Window:AddTab({Title = "FX"})

FXTab:AddToggle({
    Title = "Enable FadeIn",
    Description = "Bật/Tắt hiệu ứng FadeIn",
    Default = true,
    Callback = function(state)
        UI.Notify("FX FadeIn", state and "Bật" or "Tắt", 2)
    end
})

FXTab:AddToggle({
    Title = "Enable FadeOut",
    Description = "Bật/Tắt hiệu ứng FadeOut",
    Default = true,
    Callback = function(state)
        UI.Notify("FX FadeOut", state and "Bật" or "Tắt", 2)
    end
})

FXTab:AddToggle({
    Title = "Enable Pulse",
    Description = "Bật/Tắt hiệu ứng Pulse",
    Default = true,
    Callback = function(state)
        UI.Notify("FX Pulse", state and "Bật" or "Tắt", 2)
    end
})

FXTab:AddToggle({
    Title = "Enable NeonStroke",
    Description = "Bật/Tắt NeonStroke",
    Default = true,
    Callback = function(state)
        UI.Notify("FX NeonStroke", state and "Bật" or "Tắt", 2)
    end
})

FXTab:AddToggle({
    Title = "Enable Ripple",
    Description = "Bật/Tắt Ripple",
    Default = true,
    Callback = function(state)
        UI.Notify("FX Ripple", state and "Bật" or "Tắt", 2)
    end
})

FXTab:AddToggle({
    Title = "Enable BorderPulse",
    Description = "Bật/Tắt BorderPulse",
    Default = true,
    Callback = function(state)
        UI.Notify("FX BorderPulse", state and "Bật" or "Tắt", 2)
    end
})

FXTab:AddSlider({
    Title = "Pulse Scale",
    Description = "Điều chỉnh độ phồng FX Pulse",
    Min = 1,
    Max = 2,
    Default = 1.06,
    Callback = function(value)
        UI.Notify("Pulse Scale", "Giá trị: "..value, 2)
    end
})

-- ===== Phím tắt ẩn/hiện UI =====
local minimized = false
local UserInput = game:GetService("UserInputService")
UserInput.InputBegan:Connect(function(input)
    if input.KeyCode == Enum.KeyCode.RightShift then
        if minimized then
            Window:Show()
            minimized = false
        else
            Window:Hide()
            minimized = true
        end
    end
end)
